                    </select>
                </div>
                <div class="filter-group">
                    <label for="distance-filter">Distancia:</label>
                    <select id="distance-filter" onchange="alert('Filtro por distancia cambiado a ' + this.value)">
                        <option value="500m">500m</option>
                        <option value="1km" selected>1km</option>
                        <option value="2km">2km</option>
                        <option value="5km">5km</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="hours-filter">Horario:</label>
                    <select id="hours-filter" onchange="alert('Filtro por horario cambiado a ' + this.value)">
                        <option value="open">Abierto ahora</option>
                        <option value="any" selected>Cualquier horario</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="rating-filter">Calificación:</label>
                    <select id="rating-filter" onchange="alert('Filtro por calificación cambiado a ' + this.value)">
                        <option value="all">Todas</option>
                        <option value="4+">4 estrellas o más</option>
                        <option value="3+">3 estrellas o más</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="sort-by">Ordenar por:</label>
                    <select id="sort-by" onchange="alert('Ordenado por ' + this.value)">
                        <option value="distance" selected>Distancia</option>
                        <option value="rating">Calificación</option>
                    </select>
                </div>
            </div>

