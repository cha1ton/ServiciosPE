            }

            // Simulaci√≥n de Geocodificaci√≥n (RF30)
            window.detectLocation = () => {
                const locationInput = document.getElementById('locationInput');
                locationInput.value = 'Detectando...';
                if (navigator.geolocation) {
                    navigator.geolocation.getCurrentPosition((position) => {
                        // Aqu√≠ se integrar√≠a con una API de geocodificaci√≥n inversa (ej. Google Maps Geocoding API)
                        // Para esta simulaci√≥n, usaremos un valor fijo
                        setTimeout(() => {
                            locationInput.value = 'Santa Anita, Lima';
                            alert('Ubicaci√≥n detectada: Santa Anita, Lima');
                        }, 1000);
                    }, (error) => {
                        console.error("Error de geolocalizaci√≥n:", error);
                        locationInput.value = 'Ubicaci√≥n no detectada';
                        alert('No se pudo detectar tu ubicaci√≥n. Por favor, ingresa manualmente o revisa los permisos del navegador.');
                    });
                } else {
                    locationInput.value = 'Geolocalizaci√≥n no soportada';
                    alert('Tu navegador no soporta geolocalizaci√≥n. Por favor, ingresa tu ubicaci√≥n manualmente.');
                }
            };

            // Simulaci√≥n de Chatbot (RF40, RF41)
            const chatbotInput = document.getElementById('chatbotInput');
            const sendMessageBtn = document.getElementById('sendMessageBtn');
            const chatbotMessages = document.getElementById('chatbotMessages');

            sendMessageBtn.addEventListener('click', () => {
                const messageText = chatbotInput.value.trim();
                if (messageText) {
                    addMessage(messageText, 'from-user');
                    chatbotInput.value = '';
                    simulateAiResponse(messageText);
                }
            });

            chatbotInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    sendMessageBtn.click();
                }
            });

            function addMessage(text, sender) {
                const messageDiv = document.createElement('div');
                messageDiv.classList.add('message', sender);
                messageDiv.textContent = text;
                chatbotMessages.appendChild(messageDiv);
                chatbotMessages.scrollTop = chatbotMessages.scrollHeight; // Scroll to bottom
            }

            function simulateAiResponse(query) {
                let response = "Lo siento, no entend√≠ tu consulta. ¬øPodr√≠as ser m√°s espec√≠fico? Intenta con 'Restaurantes en Santa Anita' o 'Lavander√≠as cerca'.";
                const lowerQuery = query.toLowerCase();

                if (lowerQuery.includes('restaurante') || lowerQuery.includes('comer')) {
                    response = `Claro, para comer te recomiendo:
                    <br>
                    1. <strong>La Casona del Sabor</strong> (4.8 estrellas, comida criolla) a 1.2 km. Famoso por su 'Aj√≠ de Gallina'. <a href="/map-view?service=La Casona del Sabor">Ver en mapa</a>
                    <br>
                    2. <strong>Sabor Peruano</strong> (4.2 estrellas) con opciones m√°s econ√≥micas.
                    <br><br>
                    ¬øQuieres algo m√°s espec√≠fico o ver m√°s opciones?`;
                } else if (lowerQuery.includes('lavanderia') || lowerQuery.includes('ropa')) {
                    response = `Te sugiero:
                    <br>
                    1. <strong>Limpio Express</strong> a 0.8 km, con excelente servicio de planchado. <a href="/map-view?service=Limpio Express">Ver en mapa</a>
                    <br>
                    2. <strong>EcoLavado</strong> a 1.5 km si buscas opciones ecol√≥gicas.
                    <br><br>
                    ¬øNecesitas que abran hasta tarde o tienes otra consulta?`;
                } else if (lowerQuery.includes('salud') || lowerQuery.includes('cl√≠nica') || lowerQuery.includes('farmacia')) {
                    response = `Para servicios de salud, considera:
                    <br>
                    1. <strong>Cl√≠nica Salud Total</strong> a 2.5 km y atiende 24h. <a href="/map-view?service=Clinica Salud Total">Ver en mapa</a>
                    <br>
                    2. Si buscas farmacias, <strong>FarmaM√°s</strong> est√° a 0.5 km y tiene delivery.
                    <br><br>
                    ¬øCu√°l es tu necesidad principal?`;
                } else if (lowerQuery.includes('abierto ahora') || lowerQuery.includes('horario')) {
                    response = "Necesitar√≠a saber qu√© tipo de servicio buscas para decirte si est√° abierto ahora. Por favor, especifica el tipo de negocio (ej. 'Restaurantes abiertos ahora').";
                } else if (lowerQuery.includes('gracias') || lowerQuery.includes('ok')) {
                    response = "De nada. Estoy aqu√≠ para ayudarte si tienes m√°s preguntas. üòä";
                }

                setTimeout(() => {
                    addMessageHTML(response, 'from-ai'); 
                }, 1000 + Math.random() * 1000); // Simula un retardo
            }

            function addMessageHTML(htmlContent, sender) {
                const messageDiv = document.createElement('div');
                messageDiv.classList.add('message', sender);
                messageDiv.innerHTML = htmlContent;
                chatbotMessages.appendChild(messageDiv);
                chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
            }

            // Simulaci√≥n de favoritos (RF80)
            const favoriteButtons = document.querySelectorAll('.btn-favorite');
            let favorites = JSON.parse(localStorage.getItem('favorites')) || [];

            function updateFavoriteButtons() {
                favoriteButtons.forEach(button => {
                    const serviceId = button.dataset.serviceId;
                    if (favorites.includes(serviceId)) {
                        button.querySelector('i').classList.remove('far');
                        button.querySelector('i').classList.add('fas');
                        button.classList.add('favorited');
                    } else {
                        button.querySelector('i').classList.remove('fas');
                        button.querySelector('i').classList.add('far');
                        button.classList.remove('favorited');
                    }
                });
            }

            favoriteButtons.forEach(button => {
                button.addEventListener('click', (e) => {
                    e.preventDefault();
                    const serviceId = button.dataset.serviceId;
                    const serviceName = button.closest('.service-card').dataset.serviceName;

                    if (favorites.includes(serviceId)) {
                        favorites = favorites.filter(id => id !== serviceId);
                        alert(`"${serviceName}" eliminado de tus favoritos.`);
                    } else {
                        favorites.push(serviceId);
                        alert(`"${serviceName}" a√±adido a tus favoritos.`);
                    }
                    localStorage.setItem('favorites', JSON.stringify(favorites));
                    updateFavoriteButtons();
                    updateFavoritesDropdown();
                });
            });

            function updateFavoritesDropdown() {
                const favoritesDropdownItem = document.querySelector('.dropdown-menu .dropdown-item i.fa-heart').closest('.dropdown-item');
                if (favorites.length > 0) {
                    favoritesDropdownItem.innerHTML = `<i class="fas fa-heart"></i> Favoritos (${favorites.length})`;
                } else {
                    favoritesDropdownItem.innerHTML = `<i class="fas fa-heart"></i> Favoritos`;
                }
            }

            // Llamar al inicio para inicializar el estado de los botones y el men√∫ de favoritos
            updateFavoriteButtons();
            updateFavoritesDropdown();


            // RF72 - Manejo de la reproducci√≥n de anuncios
            const adVideoPlayer = document.getElementById('adVideoPlayer');

            if (adVideoPlayer) {
                // Intenta reproducir el video cuando la p√°gina se carga.
                // En muchos navegadores, el autoplay con sonido requiere interacci√≥n del usuario.
                // 'muted' ayuda a que el autoplay funcione.
                adVideoPlayer.play().catch(error => {
                    console.warn("Autoplay de video fall√≥, probablemente por pol√≠ticas del navegador:", error);
                    // Puedes mostrar un bot√≥n de "Play" si el autoplay falla
                    // o simplemente dejar que el usuario inicie la reproducci√≥n manualmente.
                });

                // Opcional: Si quieres cambiar el video despu√©s de que uno termina
                // Puedes tener un array de URLs de videos y rotarlos.
                const adVideos = [
                    '/videos/ad_placeholder.mp4', // Aseg√∫rate de tener este video
                    // A√±ade m√°s URLs de videos de anuncios aqu√≠
                    // 'https://example.com/another_ad.mp4', 
                ];
                let currentAdIndex = 0;

                adVideoPlayer.addEventListener('ended', () => {
                    // Simula la reproducci√≥n del siguiente anuncio
                    currentAdIndex = (currentAdIndex + 1) % adVideos.length;
                    adVideoPlayer.src = adVideos[currentAdIndex];
                    adVideoPlayer.load(); // Carga el nuevo video
                    adVideoPlayer.play().catch(error => {
                        console.warn("Autoplay del siguiente video fall√≥:", error);
                    });
                });
            }
        });
