<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrar Mi Negocio - ServiciosPe</title>
    <link rel="stylesheet" href="dashboard.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header class="navbar">
        <div class="logo">
            <a href="/dashboard" class="a-logo">
                <span class="logo-icon">SP</span> ServiciosPe</a>
        </div>
        <div class="user-actions">
            <a href="/register-provider" class="btn-mi-negocio"><i class="fas fa-briefcase"></i> Mi Negocio</a>
            <div class="dropdown-container">
                <a href="#" class="user-profile" id="userProfileToggle">
                    <img src="<%= user.photo || '/user_placeholder.png' %>" alt="User Avatar" class="user-avatar">
                    <span id="user-name"><%= user.name || 'Usuario' %></span>
                </a>
                <div class="dropdown-menu" id="userDropdown">
                    <a href="/profile" class="dropdown-item"><i class="fas fa-user"></i> Mi Perfil</a>
                    <a href="#" class="dropdown-item"><i class="fas fa-heart"></i> Favoritos</a>
                    <div class="dropdown-divider"></div>
                    <a href="/auth/logout" class="dropdown-item logout-item"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a>
                </div>
            </div>
        </div>
    </header>

    <main class="content">
        <div class="register-provider-container">
            <h2>Registra tu Negocio en ServiciosPe</h2>
            <form>
                <div class="form-group">
                    <label for="businessName"><i class="fas fa-store"></i> Nombre del Negocio:</label>
                    <input type="text" id="businessName" placeholder="Ej: Mi Restaurante Favorito" required>
                </div>
                <div class="form-group">
                    <label for="category"><i class="fas fa-tag"></i> Categoría Principal:</label>
                    <select id="category" required>
                        <option value="">Selecciona una categoría</option>
                        <option value="restaurantes">Restaurantes</option>
                        <option value="lavanderias">Lavanderías</option>
                        <option value="salud">Centros de Salud</option>
                        <option value="belleza">Salones de Belleza</option>
                        <option value="automotriz">Servicios Automotrices</option>
                        <option value="otros">Otros</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="description"><i class="fas fa-info-circle"></i> Descripción Corta:</label>
                    <textarea id="description" rows="4" placeholder="Describe tu negocio en pocas palabras..."></textarea>
                </div>
                
                <h3><i class="fas fa-map-marked-alt"></i> Ubicación</h3>
                <div class="form-group">
                    <label for="address">Dirección Completa:</label>
                    <input type="text" id="address" placeholder="Ej: Av. Principal 123, Urb. Los Álamos" required>
                </div>
                <div class="form-group">
                    <label for="reference">Punto de Referencia (opcional):</label>
                    <input type="text" id="reference" placeholder="Frente al parque, al lado de la farmacia...">
                </div>
                <button type="button" class="btn-primary" style="margin-bottom: 20px;" onclick="alert('Validando ubicación con Google Maps API (simulado)... Ubicación validada: Santa Anita, Lima');"><i class="fas fa-map-pin"></i> Validar Ubicación</button>

                <h3><i class="fas fa-phone"></i> Información de Contacto</h3>
                <div class="form-group">
                    <label for="phone">Teléfono:</label>
                    <input type="tel" id="phone" placeholder="Ej: +51 987 654 321" required>
                </div>
                <div class="form-group">
                    <label for="email">Email de Contacto:</label>
                    <input type="email" id="email" value="<%= user.email %>" placeholder="correo@ejemplo.com" required>
                </div>

                <h3><i class="fas fa-clock"></i> Horarios de Atención</h3>
                <div class="horarios-grid">
                    <div>
                        <label for="mon-open">Lunes:</label>
                        <input type="time" id="mon-open" value="09:00"> - <input type="time" id="mon-close" value="18:00">
                    </div>
                    <div>
                        <label for="tue-open">Martes:</label>
                        <input type="time" id="tue-open" value="09:00"> - <input type="time" id="tue-close" value="18:00">
                    </div>
                    <div>
                        <label for="wed-open">Miércoles:</label>
                        <input type="time" id="wed-open" value="09:00"> - <input type="time" id="wed-close" value="18:00">
                    </div>
                    <div>
                        <label for="thu-open">Jueves:</label>
                        <input type="time" id="thu-open" value="09:00"> - <input type="time" id="thu-close" value="18:00">
                    </div>
                    <div>
                        <label for="fri-open">Viernes:</label>
                        <input type="time" id="fri-open" value="09:00"> - <input type="time" id="fri-close" value="18:00">
                    </div>
                    <div>
                        <label for="sat-open">Sábado:</label>
                        <input type="time" id="sat-open" value="10:00"> - <input type="time" id="sat-close" value="14:00">
                    </div>
                    <div>
                        <label for="sun-open">Domingo:</label>
                        <input type="time" id="sun-open" disabled> - <input type="time" id="sun-close" disabled> (Cerrado)
                    </div>
                </div>
                <div class="form-group" style="margin-top: 20px;">
                    <label><input type="checkbox" checked> Abierto Feriados</label>
                </div>

                <h3><i class="fas fa-images"></i> Fotos del Establecimiento (Mín. 3)</h3>
                <div class="photo-upload-grid" id="photoUploadGrid">
                    <div class="photo-upload-item">
                        <input type="file" id="photo1" accept="image/*">
                        <label for="photo1"><i class="fas fa-plus"></i> <span>Añadir Foto 1</span></label>
                        <img src="" alt="" style="display:none;">
                        <button type="button" class="remove-photo-btn"><i class="fas fa-times"></i></button>
                    </div>
                    <div class="photo-upload-item">
                        <input type="file" id="photo2" accept="image/*">
                        <label for="photo2"><i class="fas fa-plus"></i> <span>Añadir Foto 2</span></label>
                        <img src="" alt="" style="display:none;">
                        <button type="button" class="remove-photo-btn"><i class="fas fa-times"></i></button>
                    </div>
                    <div class="photo-upload-item">
                        <input type="file" id="photo3" accept="image/*">
                        <label for="photo3"><i class="fas fa-plus"></i> <span>Añadir Foto 3</span></label>
                        <img src="" alt="" style="display:none;">
                        <button type="button" class="remove-photo-btn"><i class="fas fa-times"></i></button>
                    </div>
                    <div class="photo-upload-item">
                        <input type="file" id="photo4" accept="image/*">
                        <label for="photo4"><i class="fas fa-plus"></i> <span>Añadir Foto 4</span></label>
                        <img src="" alt="" style="display:none;">
                        <button type="button" class="remove-photo-btn"><i class="fas fa-times"></i></button>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-primary" onclick="alert('Negocio registrado (simulado)! Serás redirigido a tu panel de gestión.'); window.location.href='/manage-service'; return false;">Registrar Negocio</button>
                </div>
            </form>
        </div>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const userProfileToggle = document.getElementById('userProfileToggle');
            const userDropdown = document.getElementById('userDropdown');
            if (userProfileToggle && userDropdown) {
                userProfileToggle.addEventListener('click', (e) => {
                    e.preventDefault();
                    userDropdown.classList.toggle('show');
                });
                window.addEventListener('click', (e) => {
                    if (!userProfileToggle.contains(e.target) && !userDropdown.contains(e.target)) {
                        userDropdown.classList.remove('show');
                    }
                });
            }

            // Photo upload simulation
            document.querySelectorAll('.photo-upload-item').forEach(item => {
                const input = item.querySelector('input[type="file"]');
                const img = item.querySelector('img');
                const label = item.querySelector('label');
                const removeBtn = item.querySelector('.remove-photo-btn');

                input.addEventListener('change', function() {
                    const file = this.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            img.src = e.target.result;
                            img.style.display = 'block';
                            item.classList.add('has-image');
                        }
                        reader.readAsDataURL(file);
                    }
                });

                removeBtn.addEventListener('click', (e) => {
                    e.preventDefault(); // Prevent form submission
                    e.stopPropagation(); // Stop event from bubbling to parent
                    img.src = '';
                    img.style.display = 'none';
                    item.classList.remove('has-image');
                    input.value = ''; // Clear the file input
                });
            });
        });
    </script>
</body>
</html>